  margin-left: 5px;
  font-weight: normal !important;
  color: #ff6155;
  margin-right: 5px;
}
.progress-tip-num {
  font-size: 15px;
  font-weight: bold;
}
.progress-button {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 81.5vw;
  justify-content: space-between;
  margin-top: 15px;
}
.progress-button-one-1 {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 39vw;
  height: 45px;
  color: #ffffff;
  border-radius: 100px;
  background-color: #ff6155;
}
.progress-button-one-2 {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 39vw !important;
  height: 45px;
  color: #ffffff;
  border-radius: 100px;
  background-color: #f89f12;
}
.bg-gray {
  background-color: #bbbbbb !important;
}
.progress-button-name {
  margin-left: 10px !important;
}
.line-6 {
  display: flex;
