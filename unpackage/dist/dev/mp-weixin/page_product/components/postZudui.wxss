  justify-content: space-between;
  padding-left: 83.1rpx;
  margin-top: 29rpx;
}
.the-school {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.school-icon {
  width: 5vw;
  height: 5vw;
}
.school-name {
