  align-items: center;
}
.the-thumb-num {
  margin-left: 10px;
  font-size: 13px;
}
.the-comment {
  margin-left: 40rpx;
}
.line-7 {
  width: 100vw;
  display: flex;
  flex-direction: column;
}
.line-7-line-space {
  height: 10px;
  background-color: #fafafa;
  margin-top: 15px;
}
.line-7-line-title {
  padding-left: 4.5vw;
  margin-top: 15px;
  font-size: 15px;
  font-weight: bold;
}
.line-7-member-avatars {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
