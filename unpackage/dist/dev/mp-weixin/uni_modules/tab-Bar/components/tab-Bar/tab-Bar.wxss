  /* margin-left: 1vw; */
}
.tabbar-item-3 {
  /* margin-right: 1vw; */
}
.tabbar-item-push {
  position: relative;
  bottom: 1.8vh;
  margin-bottom: 2.2vh;
}
.img {
  height: 7vw;
  width: 7vw;
  /* margin: 0 4vw; */
}
.push {
  width: 23vw;
  height: 18.1125vw;
}
.text {
  text-align: center;
  color: #727272;
}
.select {
  width: 10vh;
  height: 10vh;
  border-radius: 10vh;
  background: rgba(248, 125, 18, 0.1);
  margin-bottom: 4vh;
  position: relative;
}
.text.active {
  color: #ff812f;
}

