.content {
  background-color: #f8f8f8;
  height: 100%;
  overflow: hidden;
}
/* 隐藏滚动条scrollbar */
.nav-bar ::-webkit-scrollbar {
  display: none;
  background-color: transparent;
}
/* 顶部tabbar */
.nav-bar {
  position: relative;
  z-index: 10;
  height: 90rpx;
  white-space: nowrap;
  background-color: #fff;
}
.nav-bar .nav-item {
  display: inline-block;
  min-width: 60rpx;
  margin-right: 42rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  font-size: 30rpx;
  color: #303133;
  position: relative;
}
.nav-bar .nav-item:after {
  content: "";
  width: 0;
  height: 0;
  border-bottom: 8rpx solid;
  border-image: linear-gradient(to right, #ffc974, #f89f12) 3 stretch;
  position: absolute;
  border-bottom-left-radius: 10rpx;
  left: 50%;
  bottom: 0;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  transition: 0.3s;
}
.nav-bar .nav-item:last-child {
  margin-right: 0;
}
.nav-bar .current {
  font-family: PingFang SC;
  font-weight: 600;
  font-size: 32rpx;
  color: #333333;
}
.nav-bar .current:after {
  width: 50rpx;
}

