}
.line-1-right {
  margin-right: 3.5vw;
}
.avatar {
  /* border: #111111 1px solid; */
  border-radius: 100%;
  width: 11.5vw;
  height: 11.5vw;
  background-repeat: no-repeat !important;
  background-size: cover !important;
}
.nickname-time {
  display: flex;
  flex-direction: row;
}
.nickname {
  font-weight: bold;
  font-size: 14px;
  margin-left: 1.5vw;
}
.time {
  margin-left: 3.5vw;
  font-size: 13px;
  color: #bbbbbb;
}
.line-2 {
  display: flex;
  flex-direction: row;
  padding-left: 15vw;
  width: 81.5vw;
  padding-right: 3.5vw;
  flex-wrap: wrap;
}
.line-2-one {
  color: #f89f12;
  font-size: 13px;
  margin-right: 10px;
}
.line-3 {
  padding-left: 15vw;
