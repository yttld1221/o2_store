}
.line-3-1 {
  padding-left: 15vw;
  width: 81.5vw;
  padding-right: 3.5vw;
  font-size: 14px;
  margin-top: 5px;
}
.line-3-1-a {
  font-style: italic;
  color: #ff6155;
  font-size: 12px;
}
.line-3-2 {
  padding-left: 15vw;
