
.content {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.the-line-4 {
  z-index: 10;
  display: flex;
  flex-direction: row;
  width: 100vw;
  border-bottom: #f3f3f3 1px solid;
  background-color: #ffffff;
  position: fixed;
}
.the-line-4-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 50%;
}
.the-line-4-item-selected {
  color: #000000 !important;
}
.the-line-4-item-name {
  margin-top: 10px;
  color: #bbbbbb;
  height: 25px;
  line-height: 25px;
}
.the-line-4-item-line {
  width: 25%;
  height: 3px;
  background-color: #f89f12;
  border-radius: 100px;
  margin-top: 7px;
}
.posts-data {
  width: 100vw;
  margin-top: 45px;
}
.space-line-bottom {
  margin-top: 45px;
  height: 180px;
}

