
.status-navBar {
	width: 100vw;
	position: fixed;
	top: 0;
	background-color: #ffffff;
	z-index: 8;
}
.navBar {
	position: absolute;
	bottom: 0;
	width: 100%;
	background-color: #ffffff;
	text-align: start;
	padding-left: 3.5vw;
}
.navBar view {
	font-size: 15px;
	font-weight: bold;
}
.navBar image {
	margin-left: 5px;
	width: 3.5vw;
	height: 3.5vw;
}
.the-line-1 {
	width: 93vw;
	padding: 3.5vw;
	display: flex;
	flex-direction: row;
	align-items: center;
}
.the-line-1-image {
	width: 17vw;
	height: 17vw;
}
.the-line-1-right {
	width: 76vw;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: space-between;
}
.the-line-1-right-left {
	margin-left: 3.5vw;
}
.the-line-1-right-left-top {
	font-weight: bold;
	font-size: 15px;
	display: flex;
	flex-direction: row;
}
.the-line-1-right-left-bottom {
	font-size: 13px;
	color: #bbbbbb;
	margin-top: 10px;
	width: 65vw;
}
.the-line-2 {
	width: 93vw;
	padding: 3.5vw;
	display: flex;
	flex-direction: row;
	align-items: center;
}
.red-tip {
	width: 10px;
	height: 10px;
	border-radius: 100%;
	background-color: #ff0000;
	margin-left: 5px;
}
.uni-icons{
	width: 11vw;
	text-align: center;
}

