.followed-users {
  border-top: 20rpx solid #fafafa;
  overflow: hidden;
}
.followed-users .followed-users-item {
  padding: 20rpx 30rpx;
  justify-content: space-between;
}
.followed-users .followed-users-item .followed-users-item-left .img-box {
  position: relative;
  width: 100rpx;
  height: 100rpx;
  margin-right: 19rpx;
}
.followed-users .followed-users-item .followed-users-item-left .img-box .dian {
  position: absolute;
  top: 0;
  left: 0;
  width: 10rpx;
  height: 10rpx;
  background: #f23333;
  border-radius: 50%;
}
.followed-users .followed-users-item .followed-users-item-left .img-box image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.followed-users .followed-users-item .followed-users-item-left .message-info {
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.followed-users .followed-users-item .followed-users-item-left .message-info .message-name {
  font-family: PingFang SC;
  font-weight: 500;
  font-size: 26rpx;
  color: #000000;
}
.followed-users .followed-users-item .followed-users-item-left .message-info .red-tip-box {
  position: relative;
  display: flex;
  align-items: flex-start;
}
.followed-users .followed-users-item .followed-users-item-left .message-info .message-desc {
  font-family: PingFang SC;
  font-weight: 400;
  font-size: 24rpx;
  color: #666666;
}
.followed-users .followed-users-item .followed-users-item-left .message-info .gz-desc {
  width: 50vw;
  overflow: hidden;
  /* 确保内容超出容器时会被隐藏 */
  white-space: nowrap;
  /* 确保文本在一行内显示，避免换行 */
  text-overflow: ellipsis;
  /* 用省略号表示被截断的文本 */
}
.followed-users .followed-users-item .followed-users-item-left .message-info .hd-desc {
  width: 55vw;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.followed-users .followed-users-item .message-btn {
  background: #ff812f;
  color: #ffffff;
  border-radius: 50rpx;
  padding: 15rpx 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  font-size: 26rpx;
}
.followed-users .followed-users-item .is-regard {
  background: #bbbbbb;
}
.followed-users .no-read {
  background: rgba(248, 159, 18, 0.05);
}
.followed-users-one {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 3.5vw;
  width: 93vw;
  padding: 5.5vw 3.5vw;
}
.followed-users-one-left-avatar {
  border-radius: 100%;
  width: 17vw;
  height: 17vw;
  background-repeat: no-repeat !important;
  background-size: cover !important;
  background-color: #e5feed !important;
}
.red-tip {
  width: 10px !important;
  height: 10px !important;
  border-radius: 100%;
  background-color: #ff0000;
  margin-left: 5px;
}
.followed-users-one-right {
  padding-left: 3.5vw;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 73.5vw;
}
.followed-users-one-right-left {
  display: flex;
  flex-direction: column;
  align-content: flex-start;
  width: 45vw;
}
.followed-users-one-right-left-name {
  font-size: 15px;
  font-weight: bold;
  display: flex;
  flex-direction: row;
}
.followed-users-one-right-left-intro {
  margin-top: 5px;
  font-size: 12px;
  color: #bbbbbb;
}
.followed-users-one-right-right {
  height: 35px;
  line-height: 35px;
  background: #ff812f;
  padding: 0 10px;
  border-radius: 100px;
  font-size: 13px;
  color: #ffffff;
}
.img_url {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  background-repeat: no-repeat !important;
  background-size: cover !important;
  background-color: #e5e5e5 !important;
  background-position: center !important;
}
.bg-img {
  background: transparent !important;
}
.space-line-bottom {
  height: 80px;
}
.flex-align {
  display: flex;
  align-items: center;
}

