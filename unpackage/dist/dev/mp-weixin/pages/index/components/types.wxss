.center-cut-menu {
  width: 100%;
  height: 80rpx;
  box-sizing: border-box;
}
.center-cut-menu .scroll-view {
  height: 80rpx;
  white-space: nowrap;
}
.center-cut-menu .scroll-view .scroll-item {
  height: 80rpx;
  margin-right: 42rpx;
  display: inline-block;
}
.center-cut-menu .scroll-view .scroll-item .item-box {
  height: 100%;
  display: flex;
  align-items: center;
  position: relative;
}
.center-cut-menu .scroll-view .scroll-item .line {
  margin: 0 auto;
  left: 0;
  right: 0;
  position: absolute;
  bottom: 0;
  width: 50rpx;
  height: 8rpx;
  background: linear-gradient(270deg, #ffc974, #f89f12);
  border-radius: 4rpx;
}
.center-cut-menu .scroll-view .scroll-item .item-text {
  font-weight: 500;
  font-size: 28rpx;
  color: #333333;
}
.center-cut-menu .scroll-view .scroll-item .item-text.active {
  font-weight: 600;
  font-size: 32rpx;
  color: #333333;
}
.center-cut-menu .scroll-view .scroll-item:last-child {
  margin-right: 0;
}
.center-cut-menu .myname-enter {
  opacity: 0;
}
.center-cut-menu .myname-enter-active {
  transition: opacity 1s;
}
.center-cut-menu .myname-leave-to {
  opacity: 0;
}
.center-cut-menu .myname-leave-active {
  transition: opacity 1s;
}

